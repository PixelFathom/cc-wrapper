{
  "info": {
    "name": "Project Management API",
    "description": "API collection for the project management tool",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Projects",
      "item": [
        {
          "name": "Create Project",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My New Project\",\n  \"repo_url\": \"https://github.com/user/repo\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects"]
            }
          }
        },
        {
          "name": "List Projects",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/projects",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects"]
            }
          }
        },
        {
          "name": "Get Project",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Implement Feature X\",\n  \"project_id\": \"{{projectId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks"]
            }
          }
        },
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "tasks"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Send Query",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"prompt\": \"Help me implement a new feature\",\n  \"org_name\": \"default\",\n  \"cwd\": \"project1/task1/sub1\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "query"]
            }
          }
        },
        {
          "name": "Init Project",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"org_name\": \"default\",\n  \"cwd\": \"project1/task1\",\n  \"repo_url\": \"https://github.com/user/repo\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/init_project",
              "host": ["{{baseUrl}}"],
              "path": ["api", "init_project"]
            }
          }
        }
      ]
    },
    {
      "name": "Approvals",
      "item": [
        {
          "name": "Get Pending Approvals",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/approvals/pending?cwd=project1/task1/sub1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "approvals", "pending"],
              "query": [
                {
                  "key": "cwd",
                  "value": "project1/task1/sub1"
                }
              ]
            }
          }
        },
        {
          "name": "Submit Approval Result",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approval_id\": \"{{approvalId}}\",\n  \"decision\": \"approved\",\n  \"comment\": \"Looks good to proceed\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/approvals/result",
              "host": ["{{baseUrl}}"],
              "path": ["api", "approvals", "result"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "projectId",
      "value": "",
      "type": "string"
    },
    {
      "key": "approvalId",
      "value": "",
      "type": "string"
    }
  ]
}